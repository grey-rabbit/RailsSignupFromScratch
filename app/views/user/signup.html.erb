<h1>User#signup</h1>
<p>Find me in app/views/user/signup.html.erb</p>

<%= flash[:notice_signup] %>

<%= form_for @user, :as => :user, :url => new_user_path, :method => :post do |f| %>
<table>
	<tr>
		<td><%= f.label 'Username' %></td><td><%= f.text_field :username, :style=>'width: 200px;' %></td>
	</tr>
	<tr>
		<td><%= f.label 'Email' %></td><td><%= f.text_field :email, :style=>'width: 200px;' %></td>
	</tr>
	<tr>
		<td><%= f.label 'Password' %></td><td><%= f.password_field :password, :style=>'width: 200px;' %></td>
	</tr>
	<tr>
		<td></td><td align="right"><%= f.submit 'Signup' %></td>
	</tr>
</table>
<% end %>
